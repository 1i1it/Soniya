<%
  skinny_layout ||= false
%>
<!DOCTYPE html>
<html>
<head>
  <title><%=html_title%></title>

  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/lib/bootstrap3.min.css">
  <link rel="stylesheet" href="/css/lib/font-awesome_4.5.0.min.css">

  <%= erb :"layout/material_design" %>  
  
  <link rel="stylesheet" href="/css/main.scss.css">  

</head>

<body style='padding-top: 60px; '>  
  <div class='container-fluid'>        
    
    <% unless skinny_layout %>
      <%= erb :"header/header" %>    
      <%= erb :"layout/flash" %>            
    <% end %>

    <%= yield %>        
  </div>

    <% unless skinny_layout %>
      <%= erb :"footer/footer" %>    
    <% end %>    
    <%= erb :bottom_js_scripts %>
</body>

</html>
