<style type="text/css">
.table-row{
cursor:pointer;
}
</style>  
<h2> Request </h2>
   <%item =  locals[:request] || $ir.get({_id:params[:request_id]})%>
   <%keys = ["_id", "user_id", "text", "location", "medium", "amount", "latitude", "longitude", "status", "is_private", "created_at", "paypal_pay_key", "updated_at", "paid"]%>
  <table class='table table-striped table-bordered table-hover table-sm table-responsive' >
    <thead class='thead-inverse'>

    <% keys.each  do |key| %>
      <td><%= key %> </td>
    <% end %>
  </thead>
  <tbody>
  		<tr class="table-row">

	  <% keys.each do |key| %>
      <% if key == "paid" && !item[:paid] %>
        <td> <a href="/pay?id=<%=item["_id"]%>"> <button type="button" class="btn btn-primary btn-sm">Pay now</button></a> </td>
      
      <%else%>
        <td> <%= item[key] || "none" %></td>
      <%end%> 
	  <% end %>

    
	  </tr>
	  
  
  </tbody>
</table>


                                            


  <h2> Responses </h2>
  <table class='table table-striped table-bordered table-hover table-sm table-responsive' >
  <% responses = locals[:responses] ||  $res.get_many_limited({request_id:params[:request_id]}, sort: [{created_at: -1}] )%>
  <% responses = map_responses(responses)%>
    <thead class='thead-inverse'>
    <% response = responses.last || {} %>
    <% response.each_key do |key| %>
      <td><%= key %> </td>
    <% end %>

  </thead>
  <tbody>
  
  <% responses.each do |response| %>
  		<tr class="table-row" data-href="/responses?response_id=<%=response['_id']%>">

	  <% response.each_value do |value| %>
	  <td> <%= value %></td>

	    <% end %>
	  </tr>
	  
  <% end %>
  </tbody>
</table>


